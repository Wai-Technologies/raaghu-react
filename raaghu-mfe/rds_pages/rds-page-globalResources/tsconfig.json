{
	"compilerOptions": {
		"target": "esnext",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"baseUrl": "./",
		"outDir": "./dist",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": false,
		"sourceMap": true,
		"noEmit": false,
		"jsx": "react-jsx",
	},
	"include": [
		"src"
	],
	"exclude": [
		"./dist/**/*",
		"./node_modules/**/*",
		"**/*.stories.tsx"
	]
}